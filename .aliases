alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias less='less -i'
alias cdg='cd $(git root)'
alias .net=dotnet
alias csr=csharprepl

# Aliases for common typos
alias gti=git

if command -v wslpath >/dev/null 2>&1
then
    explorer () {
        if test $# -eq 0
        then
            explorer.exe .
        else
            for f in "$@"
            do
                explorer.exe "$(wslpath -w "${f:-.}")"
            done
        fi
    }
fi
